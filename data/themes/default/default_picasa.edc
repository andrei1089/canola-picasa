               }
            }
            description {
               state: "alternate" 0.0;
               inherit: "default" 0.0;
               visible: 0;
            }
         }

         programs {
            program {
               name: "thumb,show";
               signal: "thumb,show";
               action: STATE_SET "default" 0.0;
               target: "no-thumb";
               target: "contents";
            }
            program {
               name: "thumb,hide";
               signal: "thumb,hide";
               action: STATE_SET "alternate" 0.0;
               target: "no-thumb";
               target: "contents";
            }
