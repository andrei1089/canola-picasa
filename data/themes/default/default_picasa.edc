#define STATE_ADD_VISIBLE()                                 \
    description {                                           \
        state: "visible" 0.0;                               \
        inherit: "default" 0.0;                             \
        color: 255 255 255 255;                             \
        visible: 1;                                         \
    }                                                       \

#define STATE_ADD_HIDDEN()                                  \
    description {                                           \
        state: "hidden" 0.0;                                \
        inherit: "default" 0.0;                             \
        color: 255 255 255 0;                               \
        visible: 0;                                         \
    }                                                       \

#define PROGRAM_ADD_HIDE(p_name)                                        \
   program {                                                            \
      name: p_name",hide";                                              \
      signal: p_name",hide";                                            \
      action: STATE_SET "hidden" 0.0;                                   \
      target: p_name;                                                   \
   }                                                                    \

#define PROGRAM_ADD_SHOW(p_name)                                        \
   program {                                                            \
      name: p_name",show";                                              \
      signal: p_name",show";                                            \
      action: STATE_SET "visible" 0.0;                                  \
      target: p_name;                                                   \
   }


   group {
      name: "list_item_picasa";

      min: 1 100;
      max: 9999 100;
      parts {
         part {
            name: "clipper";
            type: RECT;
            description {
               state: "default" 0.0;
               rel1 {
                  relative: 0.0 0.0;
                  offset: 0 0;
               }
               rel2 {
                  relative: 1.0 1.0;
                  offset: -1 -1;
               }
            }
            description {
               state: "hidden" 0.0;
               inherit: "default" 0.0;
               color: 255 255 255 0;
               visible: 0;
            }
         }

         part {
            name: "selection_clipper";
            type: RECT;
            clip_to: "clipper";
            description {
               state: "default" 0.0;
               color: 255 255 255 0;
               visible: 0;
               rel1 {
                  relative: 0.0 0.0;
                  offset: 0 0;
               }
               rel2 {
                  relative: 1.0 1.0;
                  offset: -1 -2;
               }
            }
            description {
               state: "visible" 0.0;
               inherit: "default" 0.0;
               color: 255 255 255 255;
               visible: 1;
            }
         }

         part {
            name: "selection";
            type: SWALLOW;
            clip_to: "selection_clipper";
            description {
               state: "default" 0.0;
               rel1 {
                  relative: 0.0 0.0;
                  offset: 0 0;
               }
               rel2 {
                  relative: 1.0 1.0;
                  offset: -1 -2;
               }
            }
         }

         part {
            name: "shadow";
            type: IMAGE;
            clip_to: "clipper";
            mouse_events: 0;
            description {
               state: "default" 0.0;
               min: 120 10;
               max: 120 10;
               rel1 {
                  relative: 0.0 1.0;
                  offset: 10 -5;
               }
               rel2 {
                  relative: 0.0 1.0;
                  offset: 159 4;
               }
               image.normal: "images/shadow_album_art_small.png";
            }
         }

         part {
            name: "separator";
            type: IMAGE;
            clip_to: "clipper";
            mouse_events: 0;
            description {
               state: "default" 0.0;
               min: 100 1;
               max: 9999 1;
               rel1 {
                  relative: 0.0 1.0;
                  offset: 0 -1;
               }
               rel2 {
                  relative: 1.0 1.0;
                  offset: -1 -1;
               }
               image {
                  normal: "images/sep_list_text.png";
                  border: 50 50 0 0;
               }
            }
            description {
               state: "last" 0.0;
               inherit: "default" 0.0;
               visible: 0;
            }
         }

         programs {
            program {
               name: "state,default";
               signal: "state,default";
               action: STATE_SET "default" 0.0;
               target: "separator";
            }
            program {
               name: "state,last";
               signal: "state,last";
               action: STATE_SET "last" 0.0;
               target: "separator";
            }

            program {
               name: "clip,state,hidden";
               signal: "clip,state,hidden";
               action: STATE_SET "hidden" 0.0;
               target: "clipper";
            }
            program {
               name: "clip,state,default";
               signal: "clip,state,default";
               action: STATE_SET "default" 0.0;
               target: "clipper";
            }

            program {
               name: "selection,show";
               signal: "selection,show";
               action: STATE_SET "visible" 0.0;
               transition: DECELERATE (TIMEOUT_HIDE / 3);
               target: "selection_clipper";
            }
            program {
               name: "selection,hide";
               signal: "selection,hide";
               action: STATE_SET "default" 0.0;
               transition: DECELERATE (TIMEOUT_HIDE / 3);
               target: "selection_clipper";
            }
         }

         part {
            name: "no-thumb";
            type: IMAGE;
            mouse_events: 0;
            clip_to: "clipper";
